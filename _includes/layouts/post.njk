---
layout: layouts/base-post.njk
section: post
---

<div class="container">

    <div class="inner-container" style="padding-bottom: 0;padding-top: 0;">
      {% include "components/nav.njk" %}
    </div>

    <div class="inner-container">

      <h1>{{ title }}</h1>
      <p><small>
        {{ date | readableDate }} â€”
        {% for tag in tags %}
          {%- if tag != "post" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </small></p>

      {{ layoutContent | safe }}

    </div>

</div>
