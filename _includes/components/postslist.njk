<section>
	{% for post in postslist | reverse %}
		<article{% if post.url == url %} data-current="current item"{% endif %}>
			<p>
				<time datetime="{{ post.date | machineDate }}">
					<small>{{ post.date | machineDate }}</small>
				</time>
			</p>
			<h3 class="post-title">
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled
					{% endif %}
				</a>
			</h3>
			{% if post.data.summary %}
				<p>
					{{ post.data.summary }}
				</p>
			{% endif %}
			{% if post.data.tags %}
				<p>
					<small>
						Tagged:
						{% for tag in post.data.tags %}
			  			{%- if tag != "post" -%}
			  				{% set tagUrl %}/tags/{{ tag }}/{% endset %}
			  			<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
			  			{%- endif -%}
						{% endfor %}
					</small>
				</p>
			{% endif %}
			<hr>
		</article>
	{% endfor %}
</section>
